<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class ="container">
  <div class ="row">
    <div class ="col-sm-12 col-md-8 col-lg-5 pt-3 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

       <%= form_with model: @user do |f| %>

        <div>
        <label for="inputName">Name</label>
        <br>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        </div>

        <div>
        <label for= "inputIntroduction">Introduction</label>
        <br>
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介" %>
        </div>

        <div>
        <label for="inputImage">ProfileImage</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
        <%= f.submit "Update User" %>
        </div>

        <% end %>
    </div>
  </div>
</div>
 


